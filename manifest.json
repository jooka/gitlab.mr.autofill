{
  "manifest_version": 3,
  "name": "GitLab MR Auto Fill",
  "version": "1.0",
  "description": "Automaticky vyplní Assignee, Reviewers a Labels při vytváření merge requestu v GitLabu",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gitlab.com/*",
    "https://*.gitlab.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.com/*/merge_requests/new*",
        "https://*.gitlab.com/*/merge_requests/new*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitLab MR Auto Fill"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 